<servlet>
  <servlet-name>appServlet</servlet-name>
  <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  <init-param>
   <param-name>contextConfigLocation</param-name>
   <param-value>/WEB-INF/applicationContext.xml,/config/app-config/applicationContext-ejb.xml</param-value>
  </init-param>
  <load-on-startup>2</load-on-startup>
 </servlet>
 <!-- Restlet Servlet -->
 <servlet>
    <servlet-name>SpringFagprosedyreRESTApi</servlet-name>
    <servlet-class>org.restlet.ext.spring.SpringServerServlet</servlet-class>
     <init-param>
            <param-name>org.restlet.component</param-name>
             <!-- this value must match the bean id of the Restlet component you will configure in Spring (below) -->
            <param-value>component</param-value>
     </init-param>
     	<init-param>
    		<param-name>org.restlet.clients</param-name>
    		<param-value>CLAP HTTP HTTPS FILE</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
</servlet>
